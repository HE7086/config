set nocompatible
set laststatus=2
set showmod

set expandtab
set smartindent
set autoindent
" no bells
set noerrorbells
set novisualbell

set number
set relativenumber
" search options
set showmatch
set hlsearch
set incsearch
set ignorecase
set smartcase

set nowrap
set showcmd
set showmode
set mouse=a

noremap <F6> :set nu! rnu!<CR>
nnoremap <right> >>
nnoremap <left> <<
nnoremap == :action ReformatCode<CR>
nnoremap <up> :action MoveLineUp<CR>
nnoremap <down> :action MoveLineDown<CR>
set surround
